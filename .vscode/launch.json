    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Rust",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/sik.exe",
            "args": ["fn", "src"], 
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'sik'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=sik"
                ],
                "filter": {
                    "name": "sik",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'sik'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=sik",
                    "--package=sik"
                ],
                "filter": {
                    "name": "sik",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'sik'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=sik",
                    "--package=sik"
                ],
                "filter": {
                    "name": "sik",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}